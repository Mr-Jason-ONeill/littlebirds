<div class="container mx-auto p-4">
  <div class="flex flex-col lg:flex-row items-center">
    <div class="lg:w-1/2">
      <img
        src="{{ section.settings.maxWidthCards | image_url }}"
        alt="Grandparent"
        class="w-full lg:max-w-none">
    </div>
    <div class="lg:w-1/2 lg:pl-8">
      <div class="heart">
        {% render 'hearts' %}
      </div>
      <h3 class="card-heading">{{ section.settings.header }}</h3>
      <ul>
        <li class="bulletpoint">
          {% render 'bulletpoint' %}
          Develop your grandchild’s literacy and social-emotional skills
        </li>
        <li class="bulletpoint">
          {% render 'bulletpoint' %}
          Encourage the lost art of conversation
        </li>
        <li class="bulletpoint">
          {% render 'bulletpoint' %}
          Strengthen intergenerational connections
        </li>
      </ul>
      {% render 'circle' %}
      <ul>
        <li class="max-text-extra">
          <span class="research">Research</span>
          shows that these connections are mutually beneficial; contributing to both a child’s sense of self and an adult’s sense of purpose.
        </li>
      </ul>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Max Width Cards",
    "settings": [
      {
        "type": "image_picker",
        "id": "maxWidthCards",
        "label": "Image for Max Width Card"
      }, {
        "type": "richtext",
        "id": "header",
        "label": "Header for Max Width Card"
      }
    ]
  }
{% endschema %}