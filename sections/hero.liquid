{% liquid
  assign hero_image = section.settings.hero_image
%}

<div class="hero-container">
  <div class="hero-image">
    {% if hero_image %}
      {{ hero_image | image_url: width: 1350 | image_tag: preload: true }}
    {% endif %}
  </div>
  <div class="hero-info">
    <div class="grid-item-title">Grandma<p class="and">&</p>Me</div>
    <div class="grid-item-subtitle">activity kit</div>
    <div class="grid-item-text">Connect with your grandchild in a fun and meaningful way.
    </div>
    <button>Get A Kit</button>
    <div class="grid-item-text">No subscription required!</div>
  </div>
</div>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      }
    ]
  }
{% endschema %}