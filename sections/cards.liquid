<div class="card-container">
  <div class="card-wrapper items-center mx-auto flex flex-wrap  md:justify-items-center md:content-center">
    <div class="card-img">
      <img src="{{ section.settings.card | image_url: width: 500 }}" alt="image">
    </div>
    <div class="card-text flex flex-col items-center">
      {% render 'hearts' %}
      <h3 class="card-heading text-4xl text-blue font-sans font-bold not-italic">Introducing</h3>
      <div class="card-logo text-3xl text-blue font-sans font-bold not-italic">Grandma<span class="and-small text-4xl font-sans text-lightBlue font-bold not-italic">&</span>Me: in the kitchen</div>
      <p class="card-extra-text">{{ section.settings.text }}An activity kit for Grandma and her 4-7-year-old grandchild</p>
      <button class="btn-primary mt-4 bg-lightBlue">See the Kit</button>
      <hr class="line" />
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Card",
    "settings": [
      {
        "type": "image_picker",
        "id": "card",
        "label": "Image for Card"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Description for Card"
      }
    ]
  }
{% endschema %}