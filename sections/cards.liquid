<div class="card-container w-full flex px-11 py-4">
  <div class="card-wrapper mx-auto content-center justify-center justify-items-center flex-wrap">
    <div class="card-img opacity-50">
      <img src="{{ section.settings.card | image_url: width: 500 }}" alt="image">
    </div>
    <div class="card-text flex-1 flex-col content-stretch justify-center justify-items-center">
      {% render 'hearts' %}
      <h3 class="card-heading text-4xl text-blue font-sans font-bold not-italic">Introducing</h3>
      <div class="card-logo text-3xl text-blue font-sans font-bold not-italic">Grandma<span class="and-small text-4xl font-sans text-lightBlue font-bold not-italic">&</span>Me: in the kitchen</div>
      <p>{{ section.settings.text }}An activity kit for Grandma and her 4-7-year-old grandchild</p>
      <button>See the Kit</button>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Card",
    "settings": [
      {
        "type": "image_picker",
        "id": "card",
        "label": "Image for Card"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Description for Card"
      }
    ]
  }
{% endschema %}