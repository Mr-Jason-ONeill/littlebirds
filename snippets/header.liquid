<header>
  <div class="logo-grid">
    <div class="grid-item-logo">
      <h1>{{ shop.name }}</h1>
      </div>
    <div class="grid-item">
      <div class="slogan">Love. Laughter. Legacy.</div>
    </div>
    <div class="grid-item">
      <img class="btn" src="assets\cart1.png" alt="cart">
      <img class="btn" src="assets\user1.png" alt="user">
      <img class="btn" src="assets\email1.png" alt="email">
      <button class="main-btn">Shop Now</button>
    </div>
    </div>
  </div>
  <nav>
    <ul class="navbar">
      {% for link in linklists.main-menu.links -%}
        <li class="nav-item">{{ link.title | link_to: link.url }}
        </li>
      {%- endfor %}
    </ul>
  </nav>
</header>