<footer>
    <div class="footer-grid">
      <div class="form-item">
        <h2 class="subheading">Join Our Mailing List!</h2>
        </div>
      <div class="form-item">
        <p class="info">We’ll send you updates on new kits, special offers, and more!</p>
      </div>
      <div class="form-item">
        <form class="form" method="post">
        <input
          class="subscription-input"
          type="email"
          name="email"
          placeholder="Enter your email address"
          required/>
        <button class="subscription-button" type="submit">Shop Now</button>
      </form>
      </div>
      </div>
    </div>
    <div class="footer-bottom">
    <div>
      <ul class="footer-links">
        {% for link in linklists.main-menu.links -%}
          <li class="footer-item">{{ link.title | link_to: link.url }}
          </li>
        {%- endfor %}
        <li class="socials">©2023 Little Birds Practice</li>
        <li class="socials"><img src="assets\fb.png" alt="Socials"></li>
        <li class="socials"><img src="assets\insta.png" alt="Socials"></li>
      </ul>
    </div>
    </div>
</footer>